<!DOCTYPE html>
<html>
  <head>
    <title>EFD</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
<body>
    
 

  <header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav class="nav navbar-nav navbar-left">
      <span>Bookers</span>
    </nav>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li>
            <%= link_to "MAP", user_user_path(current_user), class: "glyphicon glyphicon-search map" %>
          </li>
          <li>
            <%= link_to "My Timeline", user_timeline_path(current_user), class: "glyphicon glyphicon-pencil my_timeline" %>
          </li>
          <li>
            <%= link_to "Timelines", user_timelines_path, class: "glyphicon glyphicon-th-list timelines" %>
          </li>
          
          <li>
            <%= link_to " log out", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out logout" %>
          </li>

        <% else %>

          <li>
            <%= link_to " Home", root_path, class: "glyphicon glyphicon-home home" %>
          </li>


          <li>
            <%= link_to " sign up", new_user_registration_path, class: "glyphicon glyphicon-edit sign_up" %>
          </li>

          <li>
            <%= link_to " login", new_user_session_path, class: "glyphicon glyphicon-log-in sign_in" %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
    <%= yield %>


  <footer>
  <div class="container">
    <div class="row">
      <div class="col-xs-3 col-xs-offset-9">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>

</body>

</html>
