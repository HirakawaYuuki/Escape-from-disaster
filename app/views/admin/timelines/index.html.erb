<div class="container">
	<div class="row">
		<div class="col-lg-12">

			<table class="table table-stryped">
				<thead><h3>ユーザーの投稿</h3></thead>
				<div id="nav-search">
					<%= form_tag admin_timelines_path, :method => 'get' do %>
					<p class="text-right">
						<%= text_field_tag :search, params[:search] %>
						<%= submit_tag "検索", :user => nil %>
					</p>
					<% end %>
				</div>
				<% @timelines.each do |timeline| %>
				<tr>
					<td><%= timeline.created_at.strftime("%Y年%m月%d日 %H時%M分") %></td>
					<td><%= timeline.timeline %></td>
					<td><%= timeline.user.family_name %><%= timeline.user.first_name %></td>

				<% end %>
			</table>
			<%= paginate @timelines %>
	</div>
</div>