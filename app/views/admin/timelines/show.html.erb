<div class="container">
	<div class="row">
		<div class="col-lg-12">
		 <p style="color: green">
			<span class="flash"><%= h(flash[:notice]) %></span>
		 </p>
		<div class="col-lg-3">
		　<%= attachment_image_tag @user, :profile_image, class: "user_image", format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
			<table class="table table-stryped">
				<tbody>
					<tr>
						<td><h6><%= @user.kana_family_name %></h6></td>
						<td><h6><%= @user.kana_first_name %></h6></td>
					</tr>
					<tr>
						<td><%= @user.family_name %></td>
						<td><%= @user.first_name %></td><br>
					</tr>
					<tr>
						<td>メールアドレス<br>
						<%= @user.email %></td>
					</tr>

				</tbody>
			</table>
			<div>
			  <%= link_to "ユーザー情報を編集する", edit_admin_user_path(@user.id), class: "btn btn-default" %>
		    </div>
		</div>
		<div class="col-lg-9">

			<table class="table table-stryped">
				<thead><h3><%= @user.family_name %><%= @user.first_name %>さんの投稿一覧</h3></thead>
				<% @timeline.each do |timeline| %>
				<tr>
					<td><%= timeline.created_at %></td>
					<td><%= attachment_image_tag timeline, :image, class: "image", format: 'jpeg', size: "100x100" %></td>
					<td><%= timeline.timeline %></td>
					<td><%= link_to "削除", user_timeline_path(timeline), class: "btn btn-danger",  "data-confirm" => "本当に削除しますか？", method: :delete %></td>
				</tr>
				<% end %>
			</table>
			<%= paginate @timeline %>
	</div>
</div>