<div class="container">
	<div class="row">
		<div class="col-lg-3">
		　<%= attachment_image_tag @user, :profile_image, class: "user_image", format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
			<table class="table table-stryped">
				<tbody>
					<tr>
						<td><h6><%= @user.kana_family_name %></h6></td>
						<td><h6><%= @user.kana_first_name %></h6></td>
					</tr>
					<tr>
						<td><%= @user.family_name %></td>
						<td><%= @user.first_name %></td><br>
					</tr>
					<tr>
						<td>メールアドレス<br>
						<%= @user.email %></td>
					</tr>
					
				</tbody>
			</table>
		</div>
		<div class="col-lg-9">

			<table class="table table-stryped">
				<thead><h3>みんなの投稿</h3></thead>
				<div id="nav-search">
					<%= form_tag user_timelines_path, :method => 'get' do %>
					<p class="text-right">
						<%= text_field_tag :search, params[:search] %>
						<%= submit_tag "検索", :timeline => nil %>
					</p>
					<% end %>
				</div>
				<% @timelines.each do |timeline| %>
				<tr>
					<td><%= timeline.created_at %></td>
					<td><%= attachment_image_tag timeline, :image, class: "image", format: 'jpeg', size: "100x100" %></td>
					<td><%= timeline.timeline %></td>
					<td><%= timeline.user.family_name%><%= timeline.user.first_name %></td>
				</tr>
				<% end %>
			</table>
			<%= paginate @timelines %>
		</div>
		<div class="col-lg-3">
			<%= link_to "あなたの投稿一覧", user_timeline_path(current_user), class: "btn btn-info" %>
		</div>
		<div class="col-lg-3">
			<%= link_to "避難施設を探そう！！", user_user_path(current_user), class: "btn btn-success" %>
		</div>
		<div class="col-lg-3">
			<%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-warning" %>
		</div>
	</div>
</div>