<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<table>
				<thead><h1>タイムラインを書こう！！</h1><h4 style="color: red">(*入力内容は最大２００文字まで)</h4></thead>
				    <% if @timeline.errors.any? %>
				<ul>
                    <% @timeline.errors.full_messages.each do |message| %>
					<li style="color: red">
						<%= message %>
					</li>
					    <% end %>
				</ul>
                    <% end %>
				<div>
					<%= form_for @timeline, :url => {:action => :create} do |f| %>
					<%= f.label :timeline, "タイムライン" %><br>
					<%= f.text_area :timeline, class: "timeline", autofocus: true, autocomplete: "timeline" %>
				<div>
			    	  <%= f.label :image, "画像投稿" %>
			    	  <%= f.attachment_field :image, class: "image", placeholder: "投稿画像" %>
			    </div>
					<%= f.submit "Create" %>
					<% end %>
				</div>
			</table>
		</div>
	</div>
</div>